<%- include('partials/header') %>
<div class="container mt-5">
  <h1>User Profile</h1>
  <hr>
  <h2>My Orders</h2>
  <% orders.forEach((order) => { %>
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><%=order.cart.totalPrice%></h4>
        <ul class="list-group">
          <% order.items.forEach((item) => { %>
            <li class="list-group-item ">
              <strong><%=item.item.title%></strong>
              <span class="badge badge-light float-right"><%=item.qty%></span>
            </li>
          <% })%>
        </ul>
      </div>
    </div>
  <% })%>

</div>
<%- include('partials/footer') %>
